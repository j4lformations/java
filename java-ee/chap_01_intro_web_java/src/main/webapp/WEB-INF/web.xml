<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!-- DECLARATION D'UN FILTRE -->
    <filter>
        <filter-name>monFiltre</filter-name>
        <filter-class>com.j4ltechnologies.formation.javaee.filters.MonFiltre</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>monFiltre</filter-name>
        <url-pattern>/deux</url-pattern>
    </filter-mapping>

    <!-- DECLARATION D'UNE SERVLET -->
    <servlet>
        <servlet-name>premiere Servlet</servlet-name>
        <servlet-class>com.j4ltechnologies.formation.javaee.servlets.PremiereServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>premiere Servlet</servlet-name>
        <url-pattern>/prem</url-pattern>
    </servlet-mapping>

</web-app>